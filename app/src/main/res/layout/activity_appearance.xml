<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:id="@+id/coordinator"
     android:background="?colorSurface">

    <com.google.android.material.appbar.AppBarLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
         android:fitsSystemWindows="true"
         android:id="@+id/appbar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
             android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
             android:layout_width="match_parent"
             style="@style/Widget.Sparkles.CollapsingToolbar"
             app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.google.android.material.appbar.MaterialToolbar
                 android:layout_height="?attr/actionBarSize"
                 android:layout_width="match_parent"
                 app:title="@string/set_main"
                 app:layout_collapseMode="pin"
                 android:id="@+id/toolbar"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
         android:id="@+id/nested_scroll_view">

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:padding="20dp"
             android:orientation="vertical"
             android:id="@+id/linear1">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_horizontal|center_vertical"
                 android:padding="40dp"
                 android:orientation="horizontal"
                 android:id="@+id/linear2">

                <LinearLayout
                     android:layout_height="420dp"
                     android:layout_width="wrap_content"
                     android:gravity="center_horizontal|center_vertical"
                     android:background="@drawable/bg_shape_round"
                     android:orientation="vertical"
                     android:paddingBottom="30dp"
                     android:paddingHorizontal="20dp"
                     android:paddingTop="20dp"
                     android:id="@+id/linear10">

                    <LinearLayout
                         android:layout_height="320dp"
                         android:layout_width="160dp"
                         android:background="@drawable/ts_bg"
                         android:orientation="vertical"
                         android:id="@+id/linear4">

                        <RelativeLayout
                             android:layout_height="match_parent"
                             android:layout_width="match_parent"
                             android:padding="8dp"
                             android:orientation="vertical"
                             android:id="@+id/linear6">

                            <LinearLayout
                                 android:layout_height="match_parent"
                                 android:layout_width="match_parent"
                                 android:background="@drawable/ts_status"
                                 android:padding="8dp"
                                 android:orientation="horizontal"
                                 android:layout_weight="1"
                                 android:id="@+id/linear7">

                            </LinearLayout>

                            <LinearLayout
                                 android:layout_height="match_parent"
                                 android:layout_width="match_parent"
                                 android:background="@drawable/ts_content"
                                 android:padding="8dp"
                                 android:orientation="horizontal"
                                 android:layout_weight="1"
                                 android:id="@+id/linear8">

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/textview1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="28dp"
                        android:layout_marginTop="14dp"
                        android:textColor="?colorOnSurface"
                        android:text="System" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_horizontal|center_vertical"
                 android:padding="8dp"
                 android:layout_marginTop="20dp"
                 android:orientation="horizontal"
                 android:id="@+id/linear3">

                <com.google.android.material.button.MaterialButtonToggleGroup
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:gravity="center_horizontal|center_vertical"
                     app:singleSelection="true"
                     app:selectionRequired="true"
                     android:padding="8dp"
                     android:orientation="horizontal"
                     android:id="@+id/linear5">

                    <com.google.android.material.button.MaterialButton
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:gravity="center_horizontal|center_vertical"
                         android:textSize="18sp"
                         style="@style/Widget.Material3.Button.OutlinedButton"
                         android:checked="true"
                         android:id="@+id/materialbutton1"
                         android:text="Light" />

                    <com.google.android.material.button.MaterialButton
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:gravity="center_horizontal|center_vertical"
                         android:textSize="18sp"
                         style="@style/Widget.Material3.Button.OutlinedButton"
                         android:id="@+id/materialbutton2"
                         android:text="Dark" />

                    <com.google.android.material.button.MaterialButton
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:gravity="center_horizontal|center_vertical"
                         android:textSize="18sp"
                         style="@style/Widget.Material3.Button.OutlinedButton"
                         android:id="@+id/materialbutton3"
                         android:text="Auto" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>